@model JWCalc.Models.UsuarioCadastro

@{
    ViewBag.Title = "CadastrarUsuario";
}

@using (Html.BeginForm("CadastrarNovoUsuario", "Usuarios", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Inserir novo usuário</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <span class="control-label col-md-2">@Html.DisplayNameFor(model => model.NOME)</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOME, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOME, "", new { @class = "help-block" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">@Html.DisplayNameFor(model => model.SENHA)</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SENHA, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                @Html.ValidationMessageFor(model => model.SENHA, "", new { @class = "help-block" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">@Html.DisplayNameFor(model => model.CONFIRMSENHA)</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CONFIRMSENHA, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                @Html.ValidationMessageFor(model => model.CONFIRMSENHA, "", new { @class = "help-block" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
