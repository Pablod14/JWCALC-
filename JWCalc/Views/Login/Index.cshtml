<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title JWCALC - Assistente para Gerenciamento das Contas da Congregação</title>
    @Styles.Render("~/Content/login")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryval")
</head>

<body>

    @{ Layout = null; }
    @model Negocios.EntityFramework.DML.ACESSOS.USUARIOS
    @{ ViewBag.Title = "Index"; }

    @Html.AntiForgeryToken()

    <div class="container h-100">
        <div class="d-flex justify-content-center h-100">
            <div class="user_card">
                <div class="d-flex justify-content-center">
                    <div class="brand_logo_container">
                        <img src="~/Imagens/LogoLogin.png" class="brand_logo" alt="Logo">
                    </div>
                </div>
                <div class="d-flex justify-content-center form_container">
                    @using (Html.BeginForm("ValidaLogin", "Login", FormMethod.Post, new { @class = "form-group has-error" }))
                    {
        @Html.ValidationMessageFor(model => model.USUNOME, "", new { @class = "help-block" })
                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            @Html.EditorFor(model => model.USUNOME, new { htmlAttributes = new { @class = "form-control input_user", @placeholder = "Nome de Usuário" } })
                        </div>
                                        @Html.ValidationMessageFor(model => model.USUSENHA, "", new { @class = "help-block" })
                                                        <div class="input-group mb-2">
                                                            <div class="input-group-append">
                                                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                                            </div>
                                                            @Html.EditorFor(model => model.USUSENHA, new { htmlAttributes = new { @class = "form-control input_pass", @type = "password", @placeholder = "Senha" } })
                                                        </div>
                                                                        <div class="form-group">
                                                                            <div class="custom-control custom-checkbox">
                                                                                <input type="checkbox" class="custom-control-input" id="customControlInline">
                                                                                <label class="custom-control-label" for="customControlInline">Lembrar-me</label>
                                                                            </div>
                                                                        </div>
                                                                                        <div class="d-flex justify-content-center mt-3 login_container">
                                                                                            <input type="submit" value="Acessar" name="button" class="btn login_btn" />
                                                                                        </div>}
                </div>

                <div class="mt-4">
                    <div class="d-flex justify-content-center links">
                        Não possui cadastro?  @Html.ActionLink("Cadastre-se agora", "CadastrarUsuario", "Usuarios", "", new { htmlAttributes = new { @class = "ml-2" } })
                    </div>
                    <div class="d-flex justify-content-center links">
                        <a href="#">Esqueceu sua senha?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>